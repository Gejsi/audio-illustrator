{
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "removeComments": true,
    "strictNullChecks": true,
    "preserveConstEnums": true,
    "declaration": true,
    "types": ["react", "react-dom", "styled-components"]
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "src/demo.tsx", "dist"]
}
